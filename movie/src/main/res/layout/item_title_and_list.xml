<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_1x"
    android:layout_marginTop="@dimen/margin_1x">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextAppearance.Body.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_1x"
        android:paddingEnd="@dimen/margin_1x"
        android:textColor="?attr/colorOnBackground"
        tools:text="@string/popular_movies" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_.5x"
        tools:listitem="@layout/item_movie" />

</LinearLayout>